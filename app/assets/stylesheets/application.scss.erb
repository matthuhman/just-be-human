@import "bootstrap";
@import "tether";

@import 'font-awesome.css';
@import url('https://fonts.googleapis.com/css?family=Montserrat&display=swap');
$enable-responsive-font-sizes: true;
@import "mixins.scss";
@import 'theme.scss';



html, body {
  font-family: 'Montserrat', sans-serif !important;
  height: 100vh;
  margin: 0;
  font-size: calc(0.3em + 0.5vw);

  @include respond-to(handhelds) {
    font-size: calc(0.8em + 0.5vw)
  }

}

a {
  text-transform: uppercase;
  text-decoration: none;
  color: $midgrey;

  &:hover {
    text-decoration: none;
  }
}

h1, h2, h3, h4, h5 {
  letter-spacing: 2px;
}

h1 {
  text-transform: uppercase;
}

.form-inputs {

  & select {
    border: 1px solid $lightgrey;
    font-size: 1.3rem;
  }
}

.registration-button {
	font-size: 2rem;
	background-color: $lightpink-low;
	padding: 1px 7px 2px;
	border: 1px solid $midgrey;
	color: $darkgrey;
	text-transform: none;
}

.submit-registration-container {
	text-align: center;
}
.submit-registration-button {
	font-size: 2rem;
	background-color: $limegreen-low;
	padding: 1px 7px 2px;
	border: 1px solid $midgrey;
	color: $darkgrey;
	text-transform: none;
	width: 50vw;
	margin-left: auto;
	margin-right: auto;
	margin-bottom: 3vh;
}

.sign-in-button {
	font-size: 2rem;
	background-color: $limegreen-low;
	color: $darkgrey;
	border: 1px solid $midgrey !important;
	text-transform: none;

	& a {
		text-transform: none;
	}
}

.register-link {
	text-transform: none;
}

.jbh-standard-title {
  font-size: 2.8em;
  padding-left: 5vw;
  margin-right: 20vw;
  margin-bottom: 3vh;
  padding-top: 2vh;
  color: $darkgrey;
  //border-bottom: 2px solid $lightgrey;
  @include respond-to(handhelds) {
    font-size: 2em;
  }
}

.jbh-green-btn-container {
  margin-left: auto;
  margin-right: auto;
  margin-top: 1vh;
  margin-bottom: 1vh;
  width: 80vw;
  height: 1.8em;
  border: 2px solid $midgrey;
  border-radius: 10px;
  text-align: center;
  font-size: 2em;
  background-color: $limegreen;
  color: black;
  & a {
    color: black;
  }

  &:hover {

    transform: scale(1.05);
    & a {
      text-decoration: none;
      color: black;
    }


  }

  .jbh-btn-text {
    width: 100%;
    height: 100%;
  }
}


.btn-success {
  background-color: $limegreen !important;
}

.main {
  padding: 4vh 0;
}

.wrapper {
  min-height: 75vh;
}

#map {
  height: 100%;
  width: 100%;
  margin: auto;
  border: 1em solid white;

  @include respond-to(handhelds){
    border: none;
  };
}

.alert {
  margin-bottom: 0;
}

.landing-beta-tag {
  font-size: .3em;
  vertical-align: text-top;
  line-height: 350%;
}

abbr[title], abbr[data-original-title] {
  text-decoration: none;
}
