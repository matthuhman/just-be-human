@import "/*";
@import "bootstrap";
@import "tether";
@import url('https://fonts.googleapis.com/css?family=Fjalla+One&display=swap');
$enable-responsive-font-sizes: true;



html, body {
  font-family: 'Montserrat', sans-serif !important;
  height: 100vh;
  margin: 0;
  font-size: calc(0.3em + 0.5vw);

  @include respond-to(handhelds) {
    font-size: calc(0.8em + 0.5vw)
  }

}

h1, h2, h3, h4, h5 {
  letter-spacing: 2px;
}

h1 {
  text-transform: uppercase;
}

.jbh-standard-title {
  font-size: 2.8em;
  padding-left: 5vw;
  margin-right: 20vw;
  margin-bottom: 3vh;
  padding-top: 2vh;
  color: $darkgrey;
  //border-bottom: 2px solid $lightgrey;
  @include respond-to(handhelds) {
    font-size: 2em;
  }
}

.jbh-green-btn-container {
  margin-left: auto;
  margin-right: auto;
  margin-top: 1vh;
  margin-bottom: 1vh;
  width: 80vw;
  height: 1.8em;
  border: 2px solid $midgrey;
  border-radius: 10px;
  text-align: center;
  font-size: 2em;
  background-color: $limegreen;
  color: black;
  & a {
    color: black;
  }

  &:hover {

    transform: scale(1.05);
    & a {
      text-decoration: none;
      color: black;
    }


  }

  .jbh-btn-text {
    width: 100%;
    height: 100%;
  }
}


.btn-success {
  background-color: $limegreen !important;
}

.main {
  padding: 4vh 0;
}

.wrapper {
  min-height: 75vh;
}

#map {
  height: 100%;
  width: 100%;
  margin: auto;
  border: 1em solid white;

  @include respond-to(handhelds){
    border: none;
  };
}

.alert {
  margin-bottom: 0;
}

.landing-beta-tag {
  font-size: .3em;
  vertical-align: text-top;
  line-height: 350%;
}

abbr[title], abbr[data-original-title] {
  text-decoration: none;
}
