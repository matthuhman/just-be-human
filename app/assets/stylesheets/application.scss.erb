@import "/*";
@import "bootstrap";
@import "tether";
@import url('https://fonts.googleapis.com/css?family=Fjalla+One&display=swap');
$enable-responsive-font-sizes: true;

//*= require introjs

html, body {
  height: 100vh;
  margin: 0;
}

h1, h2, h3, h4, h5 {
  font-family: 'Fjalla One', Arial, sans-serif;
  letter-spacing: 2px;
}

h1, h2 {
  text-transform: uppercase;
}

p, a, span {
  font-family: 'Fjalla One', Arial, sans-serif;
}

.main {
  padding: 4vh 0;
}

.wrapper {
  min-height: 75vh;
}



#map {
  height: 100%;
  width: 100%;
  margin: auto;
}

.alert {
  margin-bottom: 0;
}

.modal-dialog {
  max-width: 60vw;
}

.modal-inner {
  padding: 2vh 2vw 8vh 2vw;
}

.landing-beta-tag {
  font-size: .3em;
  vertical-align: text-top;
  line-height: 350%;
}

abbr[title], abbr[data-original-title] {
  text-decoration: none;
}
