<body>

  <% data = {} %>

  <% dates = [] %>
  <% daily_costs = [] %>
  <% monthly_cost = 0.0 %>

  <% @costs.each do |day| %>
    <p>
      <% dates << day.fetch_date %>
      <% daily_costs << day.daily_cost %>
      <% monthly_cost = day.mtd_cost %>
    </p>
  <% end %>

<p>
  <%= dates %>
</p>
<p>
  <%= daily_costs %>
</p>
<p>
  <%= monthly_cost %>
</p>

<%= bar_chart Cost.group(:fetch_date).sum(:daily_cost) %>


</body>