<h3> COMMENTS </h3>
<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @problem.comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
            <% comment_user = User.find(comment.user_id) %>
        <td><%= comment_user.username %></td>
        <% if current_user == comment_user || current_user == @problem.user || @role.level <= 2%>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user %>
<%= link_to 'Add A Comment', new_comment_path(:problem => {:problem_id => @problem.id}) %>
<% end %>
<p>----------------------------------------</p>
<br>
<br>
<br>
<p>----------------------------------------</p>
<h4>Problem Administration Links</h4>
<% if current_user == @problem.user %>
<%= link_to 'Edit', edit_problem_path(@problem) %> | <%= link_to 'Delete', @problem, method: :delete %>
<% end %>
<% if !@role %>
<%= link_to 'Follow Problem', controller: "problems", action: "follow", problem_id: @problem.id %>
<% elsif @role.level == 4 %>
<%= link_to 'Unfollow Problem', controller: "problems", action: "unfollow", problem_id: @problem.id %>
<% elsif @role.level == 2 %>
<%= link_to 'Step down as Supervisor', controller: "problems", action: "demote_user", problem_id: @problem.id, target_user_id: @role.user_id %>
<% end %>
<p>----------------------------------------</p>
<br>
