

<p>
  <strong>Title:</strong>
  <%= @problem.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @problem.description %>
</p>

<p>
  <strong>Location:</strong>
  <%= @problem.location %>
</p>

<p>
  <strong>Target completion date:</strong>
  <%= @problem.target_completion_date %>
</p>

<p>
  <strong>User:</strong>
  <%= @problem.user.email %>
</p>


<h3> COMMENTS </h3>
<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @problem.comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
            <% comment_user = User.find(comment.user_id) %>
        <td><%= comment_user.username %></td>
        <% if current_user == comment_user %>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user %>
<%= link_to 'Add A Comment', new_comment_path(:problem => {:problem_id => @problem.id}) %>
<% end %>

<br>
<br>
<br>
<h4>Problem Administration Links</h4>
<% if current_user == @problem.user %>
<%= link_to 'Edit', edit_problem_path(@problem) %> |
<% end %>
<% if !@role %>
<%= link_to 'Follow Problem', controller: "problems", action: "follow", problem_id: @problem.id, role_level: 4 %>
<% elsif @role.role_level == 4 %>
<%= link_to 'Unfollow Problem', controller: "problems", action: "unfollow", problem_id: @problem.id %>
<% end %>

<br>
<br>
<%= link_to 'Back to problems list', problems_path %>
