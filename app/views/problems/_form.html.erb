
<%= simple_form_for(@problem) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :category %>
    <%= f.input :subcategory %>
    <%= f.input :participants_required %>
    <%= f.input :target_completion_date, as: :date %>
    <%= f.input :address %>
    <%= f.input :postal_code %>
    <%= f.input :country %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-outline-primary'%>
  </div>
<% end %>
