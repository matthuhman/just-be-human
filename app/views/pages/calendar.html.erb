<% if @geopoint %>
  <div id="calendar"></div>
<% else %>
  <form class="form-inline my-2 my-lg-0" accept-charset="UTF-8" action="/" method="get">
    <input class="form-control mr-sm-2" type="search" id="postcode" placeholder="Enter a postal code" aria-label="Change Location" name="postcode">
    <button class="btn btn-outline-dark my-2 my-sm-0" type="submit" href="/" value="postcode">Change Location</button>
  </form>
<% end %>
