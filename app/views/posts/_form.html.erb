<%= simple_form_for(@post, remote: request.xhr?) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :title, placeholder: "Enter a post title" %>
  </div>
  <div class="trix-container">
    <%= f.rich_text_area :content, placeholder: "Write your post here" %>
  </div>
  <% if params[:opportunity] %>
    <%= f.hidden_field :postable_id, :value => params[:opportunity][:id] %>
    <%= f.hidden_field :postable_type, :value => 'Opportunity' %>
  <% elsif params[:requirement] %>
    <%= f.hidden_field :postable_id, :value => params[:requirement][:id] %>
    <%= f.hidden_field :postable_type, :value => 'Requirement' %>
  <% end %>
  <div class="submit-post-container">
    <%= f.button :submit, "Post", class: "submit-post-btn"%>
  </div>
<% end %>